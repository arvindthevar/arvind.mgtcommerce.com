           $("body").on("click", "#popup_accept", function(e) {
                    $("#goodyear_popup").modal('closeModal');
               });
           if (!localStorage.getItem('popupShown')) {
                $('#goodyear_popup').modal('openModal');
                localStorage.setItem('popupShown', true);
            }
       }
   );
</script>
