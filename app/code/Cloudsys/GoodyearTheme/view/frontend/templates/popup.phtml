   require(
       [
           'jquery',
           'Magento_Ui/js/modal/modal',
           'domReady!'
       ],
       function ($,modal) {
           var options = {
               type: 'popup',
               responsive: false,
               clickableOverlay:false,
               modalClass:'cookie-popup',
               innerScroll: false,
               buttons: false
