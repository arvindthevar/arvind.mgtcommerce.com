<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Config:etc/system_file.xsd">
    <system>
        <tab id="goodyear_config" translate="label" sortOrder="10">
            <label>GOODYEAR THEME</label>
        </tab>
        <section id="homepage" translate="label" sortOrder="900" showInDefault="1" showInWebsite="1" showInStore="1">
            <class>separator-top</class>
            <label>Hompage</label>
            <tab>goodyear_config</tab>
            <resource>Cloudsys_GoodyearTheme::config</resource>
            <group id="general" translate="label" type="text" sortOrder="1" showInDefault="1" showInWebsite="1" showInStore="1">
                <label>Video Configuration</label>
                
                <field id="video_url" translate="label" type="text" sortOrder="3" showInDefault="1" showInStore="1" showInWebsite="1">
                  <label>Video Url</label>
                  <comment>Please enter url after media directory ex. "goodyearbelts/myvideo.mp4"</comment>
                </field>

                <field id="video_banner" translate="label comment" type="text" sortOrder="4" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Video Banner Url(Desktop)</label>
                    <comment>Please enter url after media directory ex. "goodyearbelts/banner.jpg"</comment>
                </field>

                <field id="mobile_video_banner" translate="label comment" type="text" sortOrder="4" showInDefault="1" showInWebsite="1" showInStore="1">
                    <label>Video Banner Url(Mobile)</label>
                    <comment>Please enter url after media directory ex. "goodyearbelts/banner.jpg"</comment>
                </field>

                <field id="video_title" translate="label" type="text" sortOrder="5" showInDefault="1" showInStore="1" showInWebsite="1">
                  <label>Video Title</label>
                </field>
            </group>
        </section>
    </system>
</config>
